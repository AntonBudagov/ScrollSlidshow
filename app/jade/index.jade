extends templates/template
block title
    title Page Index
block content
   #page-content
    #slides-container
      #slides(
        data-0="transform: translate(0%,0%)"
        data-150p="transform: translate(0%,-100%)"
        data-200p=""
        data-300p="transform: translate(-100%,-100%)"
        data-350=""
        data-450p="transform: translate(-100%,0%)"
        )
        .slide#slide-1
          +menu
          .buttonSection
            +boxTitle
          .caption(
            data-40p="opacity: 1; transform:translate(0px,0px);"
            data-70p="opacity: 0; transform:translate(0px,-100%);"
            data-anchor-target="#helper")
            h1 Image 1 title
                p Image description goes here

        .slide#slide-2
          .caption(
            data-130p="opacity: 0; transform:translate(0px,-200%);"
            data-180p="opacity: 1; transform:translate(0px,0px);"
            data-250p=""
            data-280p="opacity: 0; transform:translate(-100px,0px);"
            data-anchor-target="#helper")
            h1 Image 2 title
                p Image description goes here

        .slide#slide-3
          .caption(
              data-250p="opacity: 0; transform:translate(300px,0px);"
              data-300p="opacity: 1; transform:translate(0px,0px);"
              data-anchor-target="#helper")
            h1 Image 3 title
                p Image description goes here
        .slide#slide-4
          .caption(data-430p="opacity: 0;"
              data-450p="opacity: 1;"
              data-anchor-target="#helper")
            h1 Image 4 title
                p Image description goes here

        //- for (var x = 1; x < 5; x++)
          .slide(id="slide-#{x}")
              .caption
                h1 Image #{x} title
                p Image description goes here
    +marker


